{% extends 'adminbase.html.twig' %}

{% block title %}Cart index{% endblock %}

{% block body %}
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h1>Cart orders</h1>
            </div>
            <div class="ibox-content">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Price</th>
                        <th>CreatedAt</th>
                        <th>Email</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for cart in carts %}
                        <tr>
                            <td>{{ cart.id }}</td>
                            <td>{{ cart.name }}</td>
                            <td>{{ cart.price }}</td>
                            <td>{{ cart.createdAt ? cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ cart.email }}</td>
                            <td>
                                <a href="{{ path('app_admin_cart_show', {'id': cart.id}) }}">show</a>
                                <a href="{{ path('app_admin_cart_edit', {'id': cart.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
