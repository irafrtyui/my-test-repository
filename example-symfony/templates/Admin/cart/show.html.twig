{% extends 'adminbase.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>
<div class="col-lg-6">
    <table class="table">
        <br>
        <tr>
            <th>Id</th>
            <td>{{ cart.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ cart.name }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ cart.price }}</td>
        </tr>
        <tr>
            <th>CreatedAt</th>
            <td>{{ cart.createdAt ? cart.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ cart.email }}</td>
        </tr>
    </table>
    <br/>
    <br/>
    <br/>
    <table class="table">
        {% for item in cartProducts %}
            <tr>
                <th>Name</th>
                <td>{{ item.product.name }}</td>
            </tr>
            <tr>
                <th>Qty</th>
                <td>{{ item.qty }}</td>
            </tr>
        {% endfor %}
    </table>
    <a href="{{ path('app_admin_cart_index') }}">back to list</a>

    <a href="{{ path('app_admin_cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('admin/cart/_delete_form.html.twig') }}
</div>
{% endblock %}
