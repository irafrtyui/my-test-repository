{% extends 'adminbase.html.twig' %}

{% block title %}Posts{% endblock %}

{% block body %}
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
            <h1>Posts</h1>
            <a href="{{ path('app_admin_post_new') }}">Create new</a>
            </div>
            <div class="ibox-content">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th>Content</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for post in posts %}
                    <tr>
                        <td>{{ post.id }}</td>
                        <td>{{ post.image }}</td>
                        <td>{{ post.name }}</td>
                        <td>{{ post.date ? post.date|date('Y-m-d') : '' }}</td>
                        <td>{{ post.description }}</td>
                        <td>{{ post.content }}</td>
                        <td>
                            <a href="{{ path('app_admin_post_show', {'id': post.id}) }}">show</a>
                            <a href="{{ path('app_admin_post_edit', {'id': post.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="7">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>
        </div>
    </div>






{% endblock %}
