{% extends 'base.html.twig' %}

{% block title %}
    News!
{% endblock %}

{% block body %}
    <div data-sticky-container>
        <div class="container py-7">
            <div class="row pt-5 pt-lg-6">
                <div class="col-lg-8 mb-4 mb-lg-0">
                    <div class="post">
                        <img src="{{ post.image }}" alt="" class="img-fluid rounded-3 mb-4">
                        <div class="blog-desc">
                            <div class="mb-3">
                                <small class="text-muted">{{ post.date|format_date }} By<a href="#" class="fw-bold"> John Doe</a></small>
                            </div>
                            <h2 class="mb-4 display-5">{{ post.name }}</h2>
                            <p class="lead">
                                {{ post.content }}
                            </p>
                            <ul class="list-unstyled my-7 d-flex align-items-center">
                                <li class="small me-3 text-muted">Share this post</li>
                                <li class="me-2"><a href="#" class="size-40 btn btn-outline-secondary rounded-circle p-0 flex-center fs-5 hover-translate-3d"><i class="fab fa-facebook"></i></a></li>
                                <li class="me-2"><a href="#" class="size-40 btn btn-outline-secondary rounded-circle p-0 flex-center fs-5 hover-translate-3d"><i class="fab fa-twitter"></i></a></li>
                                <li class="me-2"><a href="#" class="size-40 btn btn-outline-secondary rounded-circle p-0 flex-center fs-5 hover-translate-3d"><i class="fab fa-google-plus"></i></a></li>
                                <li><a href="#" class="size-40 btn btn-outline-secondary rounded-circle p-0 flex-center fs-5 hover-translate-3d"><i class="fab fa-linkedin"></i></a></li>
                            </ul>
                            <div class="about-author d-flex align-items-center">
                                <img src="{{ asset('img/1.jpg') }}" alt="" width="60" class="width-120 flex-shrink-0 me-4 shadow-lg h-auto rounded-3">
                                <div class="flex-grow-1">
                                    <div class="d-flex items-center mb-3">
                                        <h5 class="mb-0">John Doe</h5>
                                        <div><span class="badge bg-info ms-2">Author</span></div>
                                    </div>
                                    <p class="mb-0">
                                        Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy
                                        nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
                                    </p>
                                </div>
                            </div>

                        </div>
                    </div>

    </div>

    <hr class="my-5">
    <div class="comments">
        <h4 class="mb-6">3 Comments</h4>
        <ul class="comments-list list-unstyled">
            <li class="d-flex align-items-start mb-5">
                <div class="flex-grow-1">
                    <div class="d-flex mb-2 align-items-center justify-content-between">
                        <div>
                            <h5 class="mb-0">Mark Smith</h5>
                            <small class="text-muted">Nov. 12, 2016 at 11:15: AM</small>
                        </div>
                    </div>
                    <p class="mb-0">
                        Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy
                        nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.
                    </p>
                </div>
            </li>
        </ul>
    </div>
                <hr class="my-5">
                <h4 class="mb-4">Leave a reply</h4>
                {% if isSubmitted %}
                    <div class="alert alert-success">
                Thanks for your comment!
                    </div>
                {% endif %}

                {{ form_start(form) }}
                <form role="form">
                    <div class="row">
                        <div class="col-sm-12 mb-3">
                            {{ form_widget(form.comment) }}
                            {{ form_errors(form.comment) }}
                        </div>
                        <div class="col-sm-6 mb-3">
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                        </div>
                    </div>
                    <div class="text-right">
                        <button type="submit" class="btn btn-lg btn-primary px-4 py-3 px-lg-5">Submit</button>
                    </div>
                </form>
            </div>
    {{ form_end(form) }}
{% endblock %}