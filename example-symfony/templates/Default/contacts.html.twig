{% endblock %}

{% block body %}
    <div class="page-breadcrumb py-5 py-lg-7 bg-info bg-opacity-10">
        <div class="container">
            <h2 class="display-6 mb-0">Contact us</h2>
        </div>
    </div>

    <main>
        <section class="position-relative">
            <div class="container py-7">
                <div class="row mb-7">
                    <div class="col-sm-5">
                        <h3>Information</h3>
                    </div>
                    <div class="col-sm-7">
                        <p class="lead">
                            Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod
                            tincidunt ut laoreet dolore magna aliquam erat volutpat.
                        </p>
                        <p>124, Munna Wali Dhani, Lalchandpura, Niwaru Road, Jhotwara, Jaipur, Rajsthan, 302012</p>
                        <p class="lead"><small class="text-muted">Phone</small>: +888888888</p>
                        <p class="lead"><small class="text-muted">Email</small>: <a href="https://uigator.com/cdn-cgi/l/email-protection" class="__cf_email__" data-cfemail="32414742425d404672505d5e535c561c515d5f">[email&#160;protected]</a></p>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-5">
                        <h3>Contact form</h3>
                    </div>
                    <div class="col-sm-7">
                        <form class="needs-validation" novalidate>
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-sm-12 mb-3">
                                            <input type="text" required name="name" class="form-control"
                                                   placeholder="Full Name....">
                                        </div>
                                        <div class="col-sm-12 mb-3">
                                            <input type="text" name="email" required class="form-control"
                                                   placeholder="Email Address....">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-sm-12 mb-3">
                                        <textarea name="message" class="form-control" required rows="5"
                                                  placeholder="Message...."></textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <button type="submit" name="submit" class="btn btn-lg btn-info">send
                                        message</button>
                                </div>
                            </div>
