{% extends 'base.html.twig' %}

{% block title %}
    KIABI.
{% endblock %}

{% block body %}
    <div class="page-breadcrumb py-5 py-lg-7 bg-info bg-opacity-10">
        <div class="container pt-5 pt-lg-6">
            <h2 class="display-6 mb-3">Shop List</h2>
        </div>
    </div>

    <main data-sticky-container>
        <div class="container py-7">
            <div class="row">
                <div class="col-lg-9 mb-6 mb-lg-0">
                    <div class="row">
                        {% for item in products %}
                        <div class="col-12">
                            <div class="row align-items-sm-center">
                                <div class="col-sm-6 col-lg-5 mb-4 mb-sm-0">
                                    <a href="#" class="d-block">
                                        <img src="{{ item.image }}" alt="" class="img-fluid rounded-3"
                                        style="width: 100%;height:300px;object-fit: contain;background: #C9C9C9">
                                    </a>
                                </div><!--/thumb-->
                                <div class="col-sm-6 col-lg-7">
                                    <h3><a href="#">{{ item.name }}</a></h3>
                                    <h5 class="mb-3">${{ item.price }}</h5>
                                    <p class="text-muted mb-4">
                                        {{ item.description }}
                                    </p>
                                    <a href="{{ path('product_detail', {id:item.id}) }}" class="btn btn-light me-3">View Detail</a>
                                    <a href="{{ path('cart_add', {id:item.id}) }}" class="btn btn-primary">Add to cart</a>
                                </div>
                            </div>
                            <hr class="my-4">
                        </div>
                        {% endfor %}
                    </div>

                </div>



                <div class="col-lg-3">
                    <div class="sidebar-sticky" data-margin-top="20" data-sticky-for="992">
                        <h6 class="mb-4 fw-bolder text-uppercase">Filter by</h6>
                        <!--Filter widget-->
                        <div class="card border-0 mb-4">
                            <select class="form-nice-select wide" id="filter_sortby">
                                <option value="Sort by">Sort by</option>
                                <option value="Popular">Popular</option>
                                <option value="Price high">Price high</option>
                                <option value="Price low">Price low</option>

                            </select>
                        </div>
                        <!--Filter widget-->
                        <div class="card border-0 mb-4">
                            <select class="form-nice-select wide" id="filter_categories">
                                <option value="All Categories">All Categories</option>
                                <option value="Furniture">Trousers</option>
                                <option value="Lamp">Sweatshirts</option>
                                <option value="Clock">Dresses</option>
                                <option value="Table">Sportswear</option>
                                <option value="Bottles">Shirts</option>
                            </select>
                        </div>
                        <!--Filter widget-->
                        <div class="card border-0 mb-4">
                            <select class="form-nice-select wide" id="filter_categories">
                                <option value="Any Price">Any Price</option>
                                <option value="$0 - $100">$0 - $100</option>
                                <option value="$100 - $500">$100 - $500</option>
                                <option value="$500 - $1000">$500 - $1000</option>
                            </select>
                        </div>

                        <div class="text-end">
                            <a href="#!" class="small fw-bolder text-uppercase text-muted"><i class="fas fa-times me-2"></i>Clear filters</a>
                        </div>
                    </div>
                </div>
                <!--row end-->
            </div>
        </div>
    </main>

{% endblock %}

