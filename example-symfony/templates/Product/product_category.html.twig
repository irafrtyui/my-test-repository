{% extends 'base.html.twig' %}

{% block title %}
    About us!
{% endblock %}

{% block body %}
    <section class="overflow-hidden position-relative">
        <div class="container pb-7">
            <h2 class="text-center mb-4 display-6" data-aos="zoom-in" data-aos-delay="50">Shop by Category</h2>
            {% for item in category %}
            <div class="swiper-container swiper-category">
                <div class="swiper-wrapper">
                    <div class="swiper-slide">
                        <a class="card border-0 category-box text-body" href="{{ path('product_show', {categoryId: item.id} ) }}">
                            <img src="{{ item.image }}" alt="" class="img-fluid" style="width: 100%;height:300px;object-fit: contain;background: #C9C9C9">
                            <div
                                    class="card-body category-text d-flex align-items-center justify-content-between p-4">
                                <h4 class="h5 mb-0">{{ item.name }} </h4>
                                <p class="mb-0 small flex-shrink-0">1 item</p>
                            </div>
                        </a>
                        <!--/category-box-->
                    </div>

                </div>

                <!--Pagination-->
                <div class="position-relative pt-5">
                    <div class="swiper-pagination"></div>

                </div>

            </div>
            {% endfor %}
        </div>

    </section>

{% endblock %}