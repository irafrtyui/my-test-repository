{% extends 'base.html.twig' %}

{% block title %}
    KIABI.
{% endblock %}

{% block body%}
      <main>
          <section class="border-top">
              <div class="container py-7">
                  <div class="row">
                      <div class="col-md-6 col-xl-7 mb-5 mb-md-0">


                        <div class="swiper swiper-main">
                            <div class="swiper-wrapper">
                                <div class="swiper-slide">
                                    <img src="{{ product.image }}" alt="" class="img-fluid">
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 col-xl-5">
                        <div class="item-description">
                            <h2 class="display-5">{{ product.name }}</h2>
                            <span class="price d-block mb-4 fs-4">${{ product.price }}</span>
                            <p>
                                {{ product.description }}
                            </p>
                            <span class="text-warning d-flex align-items-center mb-3">
                                <span class="me-3 small">
                                    <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star"></i>
                                <i class="fas fa-star-half"></i>
                                </span>
                                <span><a href="#!" class="text-decoration-underline">50 Reviews</a></span>
                            </span>
                            <span class="d-block mb-3">Size: <em class="text-muted">S,M,L</em></span>

                            <div class="d-flex mb-4 align-items-center">
                                <small class="text-muted me-3">Qty</small>
                                <div class="count-input">
                                    <a class="incr-btn" data-action="decrease" href="#">â€“</a>
                                    <input class="quantity form-control border-0 shadow-none px-0" type="text" value="1">
                                    <a class="incr-btn" data-action="increase" href="#">+</a>
                                </div>
                            </div>
                            <div class="d-flex align-items-center">
                                <a href="#!" class="btn btn-info px-4 py-3 me-1 flex-grow-1"><i class="fas fa-shopping-cart me-1"></i> Add to cart</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>


{% endblock %}